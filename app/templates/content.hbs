<div class="logo">
  <div class="container">
    <img src="{{cover.source}}" alt="Logo">
  </div>
</div>

<div class="container">
  <h1>{{about}}</h1>
</div>

<ul class="photos">
  {{#each photos.data}}
    <li>
      <img src="{{this.images.0.source}}">
      <i class="fa fa-search-plus"></i>
    </li>
  {{/each}}
</ul>

<div class="container">
  <div class="opening">
    <div class="left">
      <table>
        <thead>
          <tr>
            <th>Day</th>
            <th>Open</th>
            <th>Close</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Mon</td>
            <td>{{hours.mon_1_open}}</td>
            <td>{{hours.mon_1_close}}</td>
          </tr>
          <tr>
            <td>Tue</td>
            <td>{{hours.tue_1_open}}</td>
            <td>{{hours.tue_1_close}}</td>
          </tr>
          <tr>
            <td>Wed</td>
            <td>{{hours.wed_1_open}}</td>
            <td>{{hours.wed_1_close}}</td>
          </tr>
          <tr>
            <td>Thu</td>
            <td>{{hours.thu_1_open}}</td>
            <td>{{hours.thu_1_close}}</td>
          </tr>
          <tr>
            <td>Fri</td>
            <td>{{hours.fri_1_open}}</td>
            <td>{{hours.fri_1_close}}</td>
          </tr>
          <tr>
            <td>Sat</td>
            <td>{{hours.sat_1_open}}</td>
            <td>{{hours.sat_1_close}}</td>
          </tr>
          <tr>
            <td>Sun</td>
            <td>Closed</td>
            <td>Closed</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="left">
      <svg height="60"
           width="18.88"
           fill-rule="evenodd"
           xml:space="preserve"
           viewBox="0 0 2.76352 8.78169"
           image-rendering="optimizeQuality"
