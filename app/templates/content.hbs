      <h2>{{price_range}}</h2>

      <ul>
        {{#each whosin}}
          {{#if this.working}}
          <li>
            <img src="https://graph.facebook.com/{{this.id}}/picture">
            {{this.name}}
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="contact">
    <div class="left">
      <p>{{this.general_info}}</p>

      <p><a href="phone:{{phone}}">{{phone}}</a></p>

      <p><a href="mailto:email@wacky.com">email@wacky.com</a></p>

      <p>
        {{location.street}}<br>
        {{location.zip}}<br>
        {{location.city}}<br>
        {{location.country}}
      </p>

      <p><a href="https://goo.gl/58oEmD">View on map &gt;</a></p>
    </div>
    <div class="right">
      <form action="//formspree.io/jbonigomes@yahoo.com.br" method="POST">
        <div>
          <input type="email" name="_replyto" placeholder="my@email.com">
        </div>
        <div>
          <textarea name="message" placeholder="My message"></textarea>
        </div>
        <div>
          <input type="submit" value="SEND">
        </div>
      </form>
    </div>
  </div>

</div>

<div id="map"></div>

<div class="footer">
  <div class="container">
